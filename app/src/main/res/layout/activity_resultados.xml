<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/conf_partida"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Título -->

        <!-- Subtítulo -->

        <!-- Card de Resultado -->

        <androidx.cardview.widget.CardView
            android:id="@+id/cardResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="514dp"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@drawable/top_gradient_bar">

                <!-- Mensaje de felicitación -->
                <TextView
                    android:id="@+id/tvCongrats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/cherry_bomb_one"
                    android:text="@string/nivel"
                    android:textColor="#9F7AEA"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Imagen del jugador con badge -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgPlayer"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar"
                        app:shapeAppearanceOverlay="@style/CircleImageView" />

                    <!-- Badge de medalla -->
                </FrameLayout>

                <!-- Nombre del jugador -->
                <TextView
                    android:id="@+id/tvPlayerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/cherry_bomb_one"
                    android:text="@string/player"

                    android:textColor="#2D3748"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Estadísticas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Puntuación -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="42dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/star" />

                        <TextView
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:text="@string/puntaje"
                            android:textAlignment="center"
                            android:textColor="#9F7AEA"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/puntaje_ct"
                            android:textColor="#FFC107"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <!-- Nivel -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/trophy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nivel_txt"
                            android:textColor="#9F7AEA"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/nivel_ct"
                            android:textColor="#9F7AEA"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <!-- Tiempo -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/time" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tiempo"
                            android:textColor="#9F7AEA"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/tiempo_ct"
                            android:textColor="#E91E63"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Botón Jugar de nuevo -->

                <!-- Botón Volver al inicio -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackHome"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/btn_play_again"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#F4CE36"
                    app:cornerRadius="28dp" />

                <ImageView
                    android:id="@+id/imgBadge"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:contentDescription="@string/medalla"
                    android:src="@drawable/ic_trophy" />

                <!-- Botón Cambiar modo -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>