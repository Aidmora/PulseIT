<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/conf_partida"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Título -->

        <!-- Subtítulo -->

        <!-- Card de Resultado -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="227dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="606dp"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Mensaje de felicitación -->
                <TextView
                    android:id="@+id/tvCongrats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/cherry_bomb_one"
                    android:text="¡Nivel 5 Superado!"
                    android:textColor="#9F7AEA"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Imagen del jugador con badge -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgPlayer"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar"
                        app:shapeAppearanceOverlay="@style/CircleImageView" />

                    <!-- Badge de medalla -->
                    <ImageView
                        android:id="@+id/imgBadge"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom|end"
                        android:contentDescription="Medalla"
                        android:src="@drawable/ic_trophy" />
                </FrameLayout>

                <!-- Nombre del jugador -->
                <TextView
                    android:id="@+id/tvPlayerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/cherry_bomb_one"
                    android:text="Jugador 1"
                    android:textColor="#2D3748"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Estadísticas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Puntuación -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PUNTUACIÓN"
                            android:textColor="#9F7AEA"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="15,230"
                            android:textColor="#9F7AEA"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <!-- Nivel -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NIVEL"
                            android:textColor="#9F7AEA"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="5"
                            android:textColor="#9F7AEA"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <!-- Tiempo -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TIEMPO"
                            android:textColor="#9F7AEA"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="02:45"
                            android:textColor="#9F7AEA"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Botón Jugar de nuevo -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlayAgain"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="Jugar de nuevo"
                    android:textColor="#2D3748"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#B8E5C8"
                    app:cornerRadius="28dp" />

                <!-- Botón Volver al inicio -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackHome"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Volver al inicio"
                    android:textColor="#2D3748"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#A0D8E8"
                    app:cornerRadius="28dp" />

                <!-- Botón Cambiar modo -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangeMode"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Cambiar modo"
                    android:textColor="#2D3748"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#E8C8E8"
                    app:cornerRadius="28dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>